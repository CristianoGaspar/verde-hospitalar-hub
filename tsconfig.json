{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,

    // ðŸ”§ AdiÃ§Ãµes para suportar mÃ³dulos ES e JSX
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "jsx": "react-jsx"
  }
}
